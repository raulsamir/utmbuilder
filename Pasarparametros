<!DOCTYPE html>
<html>
<head>
    <title>Obtener parámetro desde URL</title>
</head>
<body>
    <div id="resultado"></div>

    <script>
        // Obtener la URL actual sin el "https://"
        const url = window.location.href.replace('https://', '');

        // Buscar la posición del siguiente ":" en la URL
        const index = url.indexOf(':');

        // Verificar si se encontró ":" en la URL
        if (index !== -1) {
            // Extraer el valor después del siguiente ":"
            const valor = url.substring(index + 1);

            // Convertir el valor a mayúsculas o minúsculas (puedes elegir uno de estos)
            const valorMayusculas = valor.toUpperCase();
            // const valorMinusculas = valor.toLowerCase();

            // Mostrar el valor convertido en el elemento HTML con el id "resultado"
            document.getElementById('resultado').innerText = valorMayusculas;
            // document.getElementById('resultado').innerText = valorMinusculas;
        } else {
            // Si no se encontró ":" en la URL, mostrar un mensaje de error
            document.getElementById('resultado').innerText = 'No se encontró ninguna palabra después de ":" en la URL.';
        }
    </script>
</body>
</html>